@model Minecraft.Models.Item
@{
    ViewData["Title"] = "Sửa vật phẩm";
}

<h1 class="mb-4">Sửa vật phẩm</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="EditItem" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ItemId" />
            <div class="mb-3">
                <label class="form-label">Tên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Ảnh (URL)</label>
                <input asp-for="Image" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Giá trị (XP)</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Loại</label>
                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<Minecraft.Models.ItemType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Items" class="btn btn-secondary ms-2">Huỷ</a>
        </form>
    </div>
</div>
