@model Minecraft.Models.Vehicle
@{
    ViewData["Title"] = "Xoá phương tiện";
}

<h1 class="mb-4 text-danger">Xoá phương tiện</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <p>Bạn có chắc chắn muốn xoá phương tiện sau?</p>
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.VehicleId</dd>
            <dt class="col-sm-2">Tên</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Giá trị</dt>
            <dd class="col-sm-10">@Model.Value</dd>
            <dt class="col-sm-2">Loại</dt>
            <dd class="col-sm-10">@Model.Type</dd>
        </dl>

        <form asp-action="DeleteVehicle" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="VehicleId" />
            <button type="submit" class="btn btn-danger">Xoá</button>
            <a asp-action="Vehicles" class="btn btn-secondary ms-2">Huỷ</a>
        </form>
    </div>
</div>
