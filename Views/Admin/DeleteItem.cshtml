@model Minecraft.Models.Item
@{
    ViewData["Title"] = "Xoá vật phẩm";
}

<h1 class="mb-4 text-danger">Xoá vật phẩm</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <p>Bạn có chắc chắn muốn xoá vật phẩm sau?</p>
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.ItemId</dd>
            <dt class="col-sm-2">Tên</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Giá trị</dt>
            <dd class="col-sm-10">@Model.Value</dd>
            <dt class="col-sm-2">Loại</dt>
            <dd class="col-sm-10">@Model.Type</dd>
        </dl>

        <form asp-action="DeleteItem" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ItemId" />
            <button type="submit" class="btn btn-danger">Xoá</button>
            <a asp-action="Items" class="btn btn-secondary ms-2">Huỷ</a>
        </form>
    </div>
</div>
