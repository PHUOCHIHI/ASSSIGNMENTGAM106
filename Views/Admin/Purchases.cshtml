@model IEnumerable<Minecraft.Models.Purchase>
@{
    ViewData["Title"] = "Quản lý giao dịch";
}

<h1 class="mb-4">Quản lý giao dịch</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <table class="table table-hover mb-0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Người chơi</th>
            <th>Vật phẩm</th>
            <th>Phương tiện</th>
            <th>Thời gian</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.PurchaseId</td>
            <td>@p.Player?.PlayerCode</td>
            <td>@p.Item?.Name</td>
            <td>@p.Vehicle?.Name</td>
            <td>@p.PurchaseDate</td>
        </tr>
    }
    </tbody>
        </table>
    </div>
</div>
