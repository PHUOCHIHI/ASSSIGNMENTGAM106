@model IEnumerable<Minecraft.Models.Player>
@{
    ViewData["Title"] = "Quản lý người chơi";
}

<h1 class="mb-4">Quản lý người chơi</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <table class="table table-hover mb-0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Mã</th>
            <th>Email</th>
            <th>XP</th>
            <th>Chế độ chơi</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.PlayerId</td>
            <td>@p.PlayerCode</td>
            <td>@p.Email</td>
            <td>@p.ExperiencePoints</td>
            <td>@p.GameMode?.Name</td>
        </tr>
    }
    </tbody>
        </table>
    </div>
</div>
